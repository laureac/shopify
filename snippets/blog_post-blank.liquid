<a class="blog-item img-right" href="{{ article.url }}" title="{{ article.title }}" style="margin-top: -2px;">

	<div class="content">

		<div>

			<div class="header">
			
				<h3 class="title">Your article's title</h3>
				
				{% if section.settings.meta_enable %}
					<p class="meta">by Author on 12 May 2017<br />0 Comments</p>
				{% endif %}

			</div>

		</div>

	</div>

  <span class="background">
  	<span class="onboarding-svg">
      {% assign no = forloop.index | modulo:6 | plus:1 %}
      {{ 'collection-X' | replace: 'X', no | placeholder_svg_tag }}</span>
    </span>
  </span>

</a>